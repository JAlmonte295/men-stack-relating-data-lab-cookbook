<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Pantry</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1><%= pantryOwner.username %>'s Pantry</h1>
    <p> Current items in my pantry:</p>
    <ul>
      <% if (pantryOwner && pantryOwner.pantry) { pantryOwner.pantry.forEach(function(food) { %>
        <li>
          <%= food.name %> - <%= food.quantity %> <%= food.unit %>
          <% if (user && pantryOwner._id.equals(user._id)) { %>
            <a href="/users/<%= pantryOwner._id %>/foods/<%= food._id %>/edit">Edit</a>
            <form
              action="/users/<%= pantryOwner._id %>/foods/<%= food._id %>?_method=DELETE"
              method="POST"
              style="display: inline;"
            >
              <button type="submit">Delete</button>
            </form>
          <% } %>
        </li>
      <% }) } %>
    </ul>

  </body>
</html>
